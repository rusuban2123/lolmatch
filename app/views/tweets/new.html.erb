<%= form_with(model: @tweet, url: tweets_path, local: true) do |f|%>
 
    <div class="field">
    <%= f.label :weekday, "活動日" %><br />
    <%= f.collection_select(:weekday_id, Weekday.all, :id, :name, {include_blank: "---"}, {class:"select-box"}) %>
  </div>

  <div class="field">
    <%= f.label :starttime, "開始時刻~終了時刻" %><br />
    <%= f.time_field :starttime %>〜〜
    <%= f.time_field :endtime %>
  </div>
 
  <div class="field">
    <%= f.label :detail, "チーム紹介" %><br />
    <%= f.text_area :detail %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>

<% end %>